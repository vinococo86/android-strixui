<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		tools:context="com.strixui.vinococo.strixui.main.view.MainActivity">
	<android.support.constraint.ConstraintLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
	>

		<LinearLayout android:layout_width="match_parent" android:layout_height="100dp">

			<TextView android:layout_width="match_parent" android:layout_height="100dp"
					  android:id="@+id/title"/>
		</LinearLayout>

		<android.support.v7.widget.RecyclerView
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:id="@+id/main_recycler"/>

	</android.support.constraint.ConstraintLayout>
</layout>